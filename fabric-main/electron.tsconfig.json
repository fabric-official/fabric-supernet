{
    "extends":  "./tsconfig.json",
    "compilerOptions":  {
                            "outDir":  "dist-electron",
                            "module":  "CommonJS",
                            "target":  "ES2020",
                            "lib":  [
                                        "ES2020",
                                        "DOM"
                                    ],
                            "types":  [
                                          "node"
                                      ],
                            "esModuleInterop":  true,
                            "skipLibCheck":  true,
                            "resolveJsonModule":  true,
                            "sourceMap":  true
                        },
    "include":  [
                    "electron/**/*.ts"
                ]
}
